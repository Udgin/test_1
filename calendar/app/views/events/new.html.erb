<h1>Создать событие</h1>

<%= form_for :event, url: events_path do |f| %>

  <p>
      <b>Название</b><br />
      <%= f.text_field :title, size: '40' %>
  </p>

  <p>
      <b>Описание</b><br />
      <%= f.text_area :text, size: '32x10' %>
  </p>

  <p>
      <b>Дата</b><br />
      <%= f.date_field :data_times %>
  </p>

  <p>
    <b>Повтор события каждый:</b><br />
    <%= f.radio_button :calendar, 'day' %>День<br />
    <%= f.radio_button :calendar, 'week' %>Неделю<br />
    <%= f.radio_button :calendar, 'month' %>Месяц<br />
    <%= f.radio_button :calendar, 'year' %>Год<br />
  </p>

  <p>
      <%= f.submit 'Создать' %>
  </p>


<% end %>